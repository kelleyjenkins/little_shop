<div class="categories-show-title">
  All Items for <%=@category.title %>
</div>
<div class="categories-show">
  <% @category.items.each do |item| %>
    <%= item.title %>
    <%= item.description %>
    <%= item.price %>
    <div class="item_image">
      <img src="<%= asset_path(item.image)%>"/>
    </div>
  <% end %>
</div>
